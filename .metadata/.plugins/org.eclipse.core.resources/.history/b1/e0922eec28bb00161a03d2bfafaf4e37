package application;

import java.sql.*;

public class SqliteConnection {
	
	/**
	 * The Connector method establishes a link with a local database named RestaurantDB.sqlite which contains info
	 * like passwords and accounts details, this allows the java program to access data values stored in it.
	 * @return Connection conn
	 */
	
	public static Connection Connector() {
		try {
			Class.forName("org.sqlite.JDBC");
			Connection conn = DriverManager.getConnection("jdbc:sqlite:RestaurantDB.sqlite");
			return conn;
		} catch (Exception e) {
			System.out.println(e);
			return null;
		}
	}

}